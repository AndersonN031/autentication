{
    "version": 2,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/build/api/$1" 
        },
        {
            "src": "/",
            "dest": "/index.html" 
        }
    ]
}